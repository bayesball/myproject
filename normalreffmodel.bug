
model {
for(i in 1:N){
mu.y[i] <- alpha[j[i]]  + beta[j[i]] * x [i]
y[i] ~ dnorm(mu.y[i], tau[1])
}
for (p in 1:J){
alpha[p] ~ dnorm(mu.alpha, tau[2])
beta[p] ~ dnorm(mu.beta, tau[3])
}
mu.alpha ~ dnorm(0, .0001)
mu.beta ~ dnorm(0, .0001)
for(p in 1:3){
tau[p] <- pow(sigma[p], -2)
sigma[p] ~ dunif(0, 100)
}
}

